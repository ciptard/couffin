class product {
	var $name;
	var $url;
	var $img;
	var $price;
	var $weight;
	var $description;
	function product($name, $url, $img, $price, $weight, $description) {
		$this->name = $name;
		$this->url = $url;
		$this->img = $img;
		$this->price = $price;
		$this->weight = $weight;
		$this->description = $description;
	}
}
